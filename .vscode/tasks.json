{
    // See https://code.visualstudio.com/docs/editor/tasks for more information
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Cargo Watch Build",
            "type": "shell",
            "command": "cargo watch -c -w src -x 'build --example breakout'",
        },
        {
            "label": "Run Asteroids",
            "type": "shell",
            "command": "cargo run --example asteroids",
        },
        {
            "label": "Run Asteroids WASM",
            "type": "shell",
            "command": "cargo run --target wasm32-unknown-unknown --example asteroids",
        },
        {
            "label": "Run Breakout",
            "type": "shell",
            "command": "cargo run --example breakout",
        },
        {
            "label": "Run Breakout WASM",
            "type": "shell",
            "command": "cargo run --target wasm32-unknown-unknown --example breakout",
        },
    ]
}